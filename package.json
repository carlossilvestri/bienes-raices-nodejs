{
  "name": "bienesraicesmvc",
  "version": "1.0.0",
  "description": "Proyecto MVC, Nodejs, Bienes Raices",
  "main": "dist/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "prod": "npm run clean && tsc && npm run copyFolder && npm run start",
    "copyFolder": "copyfiles --u 1 ./src/frontend/** ./dist",
    "dev": "ts-node-dev --respawn --transpile-only ./src/backend/app.ts",
    "start": "node ./dist/backend/app.js",
    "css": "postcss ./src/frontend/public/css/tailwind.css -o ./src/frontend/public/css/app.css --watch",
    "clean": "rimraf dist"
  },
  "keywords": [
    "MCV",
    "Pug",
    "Tailwind",
    "MySQL",
    "Sequelize"
  ],
  "author": "Carlos Silvestri @carlossilvestri @Silvestri_C",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "http-status": "^1.5.2",
    "mysql2": "^2.3.3",
    "pug": "^3.0.2",
    "sequelize": "^6.21.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/sequelize": "^4.28.13",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "autoprefixer": "^10.4.7",
    "copy-dir": "^1.3.0",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.18",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.1.4",
    "ts-node-dev": "^1.1.8"
  }
}
