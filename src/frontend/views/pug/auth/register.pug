extends ../layout/index
block contenido
    div(class="py-10")
        h1(class="text-4xl my-10 font-extrabold text-center") Bienes
            span(class="font-normal") Raices
        h2(class="text-center text-2xl font-extrabold")=page

        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-white py-8 px-4 shadow")
                form(class="space-y-5" method="POST" action="/auth/register")
                    div
                        label(class="block text-sm uppercase text-gray-500 mb-3 font-bold" for="name") Nombre
                        input(id="name" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu Nombre" type="text" name="name")
                    div
                        label(class="block text-sm uppercase text-gray-500 mb-3 font-bold" for="email") Email
                        input(id="email" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu email" type="text" name="email")
                    div
                        label(class="block text-sm uppercase text-gray-500 mb-3 font-bold" for="password") Password
                        input(id="password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu password" type="password" name="password")
                    div
                        label(class="block text-sm uppercase text-gray-500 mb-3 font-bold" for="repeat_password") Repetir Password
                        input(id="repeat_password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Repete tu password" type="password" name="repeat_password")
                    div(class="flex items-center justify-between")
                        a(href="/auth/login" class="text-gray-500 text-xs") ¿Ya tienes cuenta? Inicia Sesión
                        a(href="/auth/forget-password" class="text-gray-500 text-xs") Olvidé mi Password 
                    input( class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer"  type="submit" value="Crear Cuenta")